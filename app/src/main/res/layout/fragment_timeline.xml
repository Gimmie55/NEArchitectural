<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/grey">

    <RelativeLayout
        android:id="@+id/root_of_timeline_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="?attr/actionBarSize">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/timeline_recycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="@color/grey"
            android:scrollbars="none"
            tools:listitem="@layout/timeline_item"/>

        <ScrollView
            android:layout_below="@id/timeline_recycler"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:justificationMode="inter_word"
                    android:text="Class aptent taciti sociosqu ad litora torquent per conubia nostra, per inceptos himenaeos. Curabitur sit ameteleifend purus. Vivamus in magna euismod, maximus quam id, pretiumaugue. Cras volutpat metus eu quam porttitor imperdiet. Proinscelerisque mi ante, a viverra felis pulvinar ac. Praesent egetrisus nec sapien venenatis euismod. Maecenas tortor dolor,suscipit vitae odio sit amet, fermentum euismod risus. Ut odio tellus, faucibus sed eros in, cursus rhoncus tortor. Praesent magna justo, ultrices sit amet finibus vel, sagittis quis justo."/>

            </LinearLayout>

        </ScrollView>

    </RelativeLayout>

</layout>